<Window x:Class="AlarmInfoCenter.UI.PrintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alarm-Info-Center" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" FontSize="14" ShowInTaskbar="False" Topmost="True" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		
		<Image Grid.RowSpan="2" Source="/AlarmInfoCenter;component/Images/printer.png" Stretch="None" Margin="0,0,6,0" />
		<TextBlock Grid.Column="1" VerticalAlignment="Bottom" Margin="0,0,0,6">Einsatz wird gedruckt...</TextBlock>
		<TextBlock Name="PrinterInfo" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top">Printer</TextBlock>
	</Grid>
</Window>
